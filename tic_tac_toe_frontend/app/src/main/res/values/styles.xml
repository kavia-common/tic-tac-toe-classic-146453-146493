<resources>
    <!-- App Theme -->
    <style name="Theme.TicTacToe.Ocean" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorPrimaryVariant">@color/ocean_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="android:windowBackground">@color/ocean_bg</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="materialButtonStyle">@style/Widget.TTT.PrimaryButton</item>
    </style>

    <!-- Board buttons -->
    <style name="Widget.TTT.BoardButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/board_idle</item>
        <item name="android:foreground">@drawable/selector_board_btn_foreground</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.TTT.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/ocean_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.TTT.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/ocean_secondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/ocean_secondary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
